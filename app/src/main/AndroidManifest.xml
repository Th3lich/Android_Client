<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aj.corp.gestioncallcenter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".shared.ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/FakeTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".EditCallActivity"
            android:label="@string/title_activity_call_edit"
            android:theme="@style/FakeTheme.filledStatusBar"></activity>
        <activity
            android:name=".CallResultsActivity"
            android:label="@string/title_activity_call_results"
            android:theme="@style/FakeTheme.filledStatusBar" />
        <activity
            android:name=".CallsFilterActivity"
            android:label="@string/title_activity_edit_calls"
            android:theme="@style/FakeTheme.filledStatusBar" />
        <activity
            android:name=".AdminActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/FakeTheme" />
        <activity
            android:name=".EmployeeActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/FakeTheme" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FakeTheme.filledStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>